pipeline {  
    agent any
    stages {
        stage('restart OTWS'){
            steps{
                sh 'ansible-playbook recycleOTWS.yml'             
                }
             }
        stage('restart OTWS1'){
            steps{
                sh 'ansible-playbook recycleOTWS1.yml' 
                    }
                }
        stage('check healthcheck after restart OTWS'){
            steps{
                timeout(time:2, unit: 'MINUTES') 
                sh 'ansible-playbook healthcheck0.yml' 
                    }
                }
        stage('check healthcheck OTWS1'){
            steps{
                timeout(time:1, unit: 'MINUTES') 
               sh 'ansible-playbook healthcheck1.yml' 
                    }
                }
    }
}
